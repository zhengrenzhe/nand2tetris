class Display {
    static int startX, startY, endX, endY;

    function void init() {
        let startX = 5;
        let startY = 5;
        let endX = 506;
        let endY = 63;

        do Display.clear();
        return;
    }

    function void refresh(LinkList list) {
        do Display.clear();
        return;
    }

    function void clear() {
        do Screen.setColor(true);
        do Screen.drawRectangle(startX, startY, endX, endY);
        return;
    }
}